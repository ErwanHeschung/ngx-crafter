{
  "name": "ngx-crafter",
  "version": "1.1.4",
  "description": "Custom Angular CLI generator",
  "type": "module",
  "main": "dist/cli.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --no-deprecation --import ./loader.mjs src/cli.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "echo 'ESLint temporarily disabled for TypeScript files'"
    ]
  },
  "bin": {
    "ngx-crafter": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ErwanHeschung/ngx-crafter"
  },
  "bugs": {
    "url": "https://github.com/ErwanHeschung/ngx-crafter/issues"
  },
  "homepage": "https://github.com/ErwanHeschung/ngx-crafter#readme",
  "author": "TOROIMERA",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "assets"
  ],
  "keywords": [
    "angular",
    "cli",
    "generator",
    "scaffold"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/semver": "^7.7.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "execa": "^9.6.0",
    "inquirer": "^12.9.0",
    "semver": "^7.7.2"
  }
}
